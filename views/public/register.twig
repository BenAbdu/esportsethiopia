{% extends "public/layout.twig" %}

{% block content %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-5">
                <form method="post" action="{{ path_for('register') }}">
                    <input type="text" name="name" placeholder="Full Name" class="form-control mt-4" style="height: 50px;" required/>
                    <input type="text" name="gamerTag" placeholder="Gamer Tag" class="form-control mt-4" style="height: 50px;" required/>
                    <input type="text" name="phone" placeholder="phone" class="form-control mt-4" style="height: 50px;" required/>
                    <input type="text" name="gameID" placeholder="PubG ID" class="form-control mt-4" style="height: 50px;" required/>
                    <input type="submit" value="Register" class="btn btn-danger btn-block mt-5 py-3">
                </form>
            </div>
        </div>
    </div>

{% endblock %}